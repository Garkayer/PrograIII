<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BE62F0"
    android:focusableInTouchMode="true"
    android:foreground="@drawable/ic_launcher_foreground"
    tools:context=".MainActivity">


    <TabHost
        android:id="@+id/tbhConversores"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/tabNuestro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/txtcantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:hint="Cantidad" />

                    <EditText
                        android:id="@+id/txtunidades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:hint="Unidades" />

                    <EditText
                        android:id="@+id/txtCantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="180dp"
                        android:hint="Unidades" />

                    <Button
                        android:id="@+id/btnProcesar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="240dp"
                        android:onClick="Procesar"
                        android:text="Convertir" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabÀrea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/txtcan"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:hint="Cantidad" />

                    <TextView
                        android:id="@+id/lblrespuesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180dp"
                        android:layout_marginTop="70dp"
                        android:text="Respuesta: " />

                    <Spinner
                        android:id="@+id/cboDeL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:entries="@array/Àrea" />

                    <Spinner
                        android:id="@+id/cboAL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="180dp"
                        android:entries="@array/Àrea" />

                    <Button
                        android:id="@+id/btnConvetir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="240dp"
                        android:onClick="convertir"
                        android:text="Convertir" />

                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
